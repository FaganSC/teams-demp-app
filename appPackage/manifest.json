{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.24/MicrosoftTeams.schema.json",
    "manifestVersion": "1.24",
    "version": "1.5.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "My App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Consto Orders ${{APP_NAME_SUFFIX}}",
        "full": "Full name for Consto Orders ${{APP_NAME_SUFFIX}}"
    },
    "description": {
        "short": "Short description of Consto Orders ${{APP_NAME_SUFFIX}}",
        "full": "Full description of Consto Orders ${{APP_NAME_SUFFIX}}"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupChat"
            ],
            "isNotificationOnly": false,
            "supportsCalling": false,
            "supportsVideo": false,
            "supportsFiles": false
        }
    ],
    "composeExtensions": [],
    "staticTabs": [
        {
            "entityId": "index0",
            "name": "Home",
            "contentUrl": "${{TAB_ENDPOINT}}/tabs/home",
            "websiteUrl": "${{TAB_ENDPOINT}}/tabs/home",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ]
        },
        {
            "entityId": "index1",
            "name": "Customers",
            "contentUrl": "${{TAB_ENDPOINT}}/tabs/Customers",
            "websiteUrl": "${{TAB_ENDPOINT}}/tabs/Customers",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}"
    ]
}
